---
import LoginButton from "../components/LoginButton.tsx";

const { title } = Astro.props;
---

<html>
  <head>
    <title>{title}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script is:inline>
      var global = global || window;
    </script>
  </head>
  <body>
    <section id="mainContent" class="bg-white m-4">
      {
        Astro.url.pathname !== "/signup" &&
          Astro.url.pathname !== "/signin" &&
          Astro.url.pathname !== "/logout" && (
            <LoginButton client:only="react" />
          )
      }
      <slot />
    </section>
  </body>
</html>
